    <properties>
        <jfx.version>11</jfx.version>
        <scala.version>2.12.5</scala.version>
        <slf4j.version>1.8.0-beta2</slf4j.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <kotlin.version>1.3.10</kotlin.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/command/java</source>
                                <source>src/main/singleton/java</source>
                                <source>src/main/dependencyInjection/java</source>
                                <source>src/main/exercices/java</source>
                                <source>src/main/factory/java</source>
                                <source>src/main/composite/java</source>
                                <source>src/main/builder/java</source>
                                <source>src/main/memento/java</source>
                                <source>src/main/interpreter/java</source>
                                <source>src/main/flyweight/java</source>
                                <source>src/main/nullObject-nullable/java</source>
                                <source>src/main/activeObject-future-promise/java</source>
                                <source>src/main/observer-rx/java</source>
                                <source>src/main/prototype/java</source>
                                <source>src/main/proxy-lazy/java</source>
                                <source>src/main/proxy-lazy/scala</source>
                                <source>src/main/singleton/java</source>
                                <source>src/main/singleton/scala</source>
                                <source>src/main/strategy/java</source>
                                <source>src/main/abstractFactory/java</source>
                                <source>src/main/adapter-trait/java</source>
                                <source>src/main/adapter-trait/scala</source>
                                <source>src/main/visitor/java</source>
                                <source>src/main/variance/java</source>
                                <source>src/main/variance/scala</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

